{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "outDir": "lib",
    "removeComments": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "es6",
    "experimentalDecorators": true,
    "sourceMap": true,
    "watch": true
  },
  "include": [
      "src/**/*",
      "ext/sc2-layout/src/schema/base.ts",
      "ext/sc2-layout/src/schema/reader.ts",
      "ext/sc2-layout/src/schema/registry.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "test"
  ]
}
